
<h1>Customers</h1>

<%= link_to "New customer", new_customer_path, class: "btn btn-primary" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th> </th>
      <th>Full Name</th>
      <th>Number of Orders</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= icon('fa-solid', 'user') %></td>
        <td><%= customer.full_name %></td>
        <td><%= customer.orders.count %></td>
        <td>
        <div class="btn-group" role="group">
          <%= link_to 'Show', customer_path(customer), class: 'btn btn-primary me-5' %>
          <%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-primary me-5' %>
          <%= button_to 'Delete', customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
